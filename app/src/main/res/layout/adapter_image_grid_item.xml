<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/tag_item_selector"
        android:id="@+id/image_adapter_image"
        android:contentDescription="@string/image_adapter_content_description" />

    <TextView
        style="@style/textview_banner_style_grid_view"
        android:id="@+id/image_adapter_text" />

</RelativeLayout>
