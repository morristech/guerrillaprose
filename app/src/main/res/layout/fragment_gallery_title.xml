<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/transparent_grey_80"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.handler.mobile.android.bachelorapp.app.helper.CustomNetworkImageView
        android:id="@+id/fragment_gallery_title_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"/>

    <TextView
        style="@style/textview_banner_style"
        android:id="@+id/fragment_gallery_title_banner"
        android:text="@string/app_name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_alignBottom="@id/fragment_gallery_title_image"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/fragment_gallery_title_image_author"
        android:textColor="@color/transparent_white_20"/>

</RelativeLayout>